<form method="post" action="{{ path('cage_delete', {'slug': cage.slug}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline-block;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cage.id) }}">
    <button class="btn btn-danger btn-sm">Delete</button>
</form>
